DEBUG=True
SECRET_KEY=local-dev-secret
LIFELOG_ENV=local
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=
CORS_ALLOWED_ORIGINS=
# 기본 SQLite 설정. Postgres 를 쓰려면 아래 주석을 해제하고 URL을 교체해 주세요.
DATABASE_URL=sqlite:///backend/src/db.sqlite3
# DATABASE_URL=postgresql://lifelog:lifelog@127.0.0.1:5432/lifelog
CACHE_URL=locmemcache://
REDIS_URL=redis://127.0.0.1:6379/0
CHANNEL_LAYER_BACKEND=channels.layers.InMemoryChannelLayer
ADMIN_URL=admin/

# Sentry/모니터링 설정 (선택)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.0

# OpenRouter 설정 (필수)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_APP_URL=https://your-app.example
OPENROUTER_TIMEOUT=45
